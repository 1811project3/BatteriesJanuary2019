<!--
 WARNING: Running this workflow will interfere with any pre-existing metadata for incremental imports. It should only be run once during setup.
 
 DESCRIPTION: Runs creation and deletion workflows for sqoop imports for both Hive and warehouse.
 -->
<workflow-app xmlns="uri:oozie:workflow:0.4" name="biforce-setup">
    
    <start to="delete-warehouse"/>
    
    <action name="delete-warehouse">
        <sub-workflow>
            <app-path>${setupDir}/warehouse/delete-warehouse-imports.xml</app-path>
            <propagate-configuration/>
        </sub-workflow>
        <ok to="create-warehouse" />
        <error to="kill" />
    </action>
    
    <action name="create-warehouse">
        <sub-workflow>
            <app-path>${setupDir}/warehouse/create-warehouse-imports.xml</app-path>
            <propagate-configuration/>
        </sub-workflow>
        <ok to="delete-hive" />
        <error to="kill" />
    </action>
    
    <action name="delete-hive">
        <sub-workflow>
            <app-path>${setupDir}/OLAP/delete-hive-imports.xml</app-path>
            <propagate-configuration/>
        </sub-workflow>
        <ok to="create-hive" />
        <error to="kill" />
    </action>
    
    <action name="create-hive">
        <sub-workflow>
            <app-path>${setupDir}/OLAP/create-hive-imports.xml</app-path>
            <propagate-configuration/>
        </sub-workflow>
        <ok to="query-hive" />
        <error to="kill" />
    </action>

    <action name="query-hive">
	    <hive xmlns="uri:oozie:hive-action:0.5">
			<job-tracker>${resourceManager}</job-tracker>
            <name-node>${nameNode}</name-node>
            <job-xml>${appPath}/hive-site.xml</job-xml>
			<script>${setupDir}/OLAP/hive-create.hql</script>
		</hive>
		<ok to = "end" />
        <error to = "kill" />
    </action>

    <kill name="kill">
        <message>message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    
    <end name="end" />
    
</workflow-app>

