<workflow-app xmlns="uri:oozie:workflow:0.4" name="stop-sqoop-metastore">

    <!--Start Workflow-->
    <start to="stop-metastore"/>

    <action name="stop-metastore">
        <sqoop xmlns="uri:oozie:sqoop-action:0.4">
            <job-tracker>${resourceManager}</job-tracker>
            <name-node>${nameNode}</name-node>
            <arg>metastore</arg>
            <arg>--shutdown</arg>
        </sqoop>
        <ok to="end" />
        <error to="kill" />
    </action>

    <kill name="kill">
        <message> Job failed </message>
    </kill>

    <end name="end"/>

</workflow-app>